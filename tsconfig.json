{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "@services/*": [
        "services/*"
      ],
      "@gateways/*": [
        "gateways/*"
      ],
      "@entities/*": [
        "entities/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "package.json"
  ]
}
